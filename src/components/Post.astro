---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
  post: CollectionEntry<"posts">;
  postId: string;
};

const { post, postId } = Astro.props;
---

<article class="rounded-lg bg-white p-6 shadow-lg dark:bg-gray-800">
  <a
    href={`/blog/${post.slug}`}
    aria-label={`Read more about ${post.data.title}`}
  >
    <Image
      transition:name="{`post-image-${post.id}`}"
      src={post.data.image}
      alt={post.data.title}
      width={600}
      height={600}
      format="webp"
      class="aspect-thumbnail mb-6 rounded-2xl object-cover shadow-xl"
    />
  </a>

  <a
    transition:name="{`post-title-${post.id}`}"
    href={`/blog/${post.slug}`}
    class="mb-4 text-2xl font-semibold text-inherit transition-colors hover:text-blue-600"
  >
    {post.data.title}
  </a>

  <div class="mb-2 text-sm text-gray-500 dark:text-gray-400">
    {post.data.Date}
  </div>

  <p class="mb-4 line-clamp-2 text-lg text-gray-700 dark:text-gray-300">
    {post.body}
  </p>
</article>
