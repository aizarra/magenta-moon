<div class="divider bg-gray-200 h-0.5 w-20 mx-auto"></div>
<!-- <div class="form-container"> -->
  <h2 class="text-center text-inherit">Contact Me</h2>
  <form
  method="POST"
  action="/api/submit"
  id="contact-form"
  class=""
  >
    <div class="mb-3 form-row">
      <div class="mr-3 mb-3 form-col">
        <label for="name_input">Your Name:</label>
        <input type="text" name="name" id="name" placeholder="Name" />
      </div>
      <div class="form-col">
        <label for="email_input">Email:</label>
        <input type="email" name="email" id="email" placeholder="name@website.com" />
      </div>
    </div>
    <div class="mb-3">
      <label for="message_input">Message:</label>
      <textarea name="message" id="message" rows="6" class="w-full border border-gray"></textarea>
    </div>
    <div class="mb-10">
      <button class="btnx border-black border p-2 hover:bg-gray-300 dark:border-white" type="submit">Send</button>
    </div>
  </form>
</div>
