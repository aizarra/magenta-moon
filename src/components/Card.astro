---
export type Props = {
  to: string;
  title: string;
  description: string;
  image: string;
};
const { title, description, image, to } = Astro.props;
---

<div class="w-full md:w-1/3 p-2">
  <div class="rounded overflow-hidden shadow-lg bg-white h-full flex flex-col">
    <a href={to} class="block flex-shrink-0">
      <img src={image} alt={title} class="object-cover w-full h-48" />
    </a>
    <div class="px-6 py-4 flex-grow">
      <div class="font-bold text-xl mb-2">{title}</div>
      <p class="text-gray-700 text-base">{description}</p>
    </div>
  </div>
</div>
