---
import type { CollectionEntry } from "astro:content";
import Main from "../components/Main.astro";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props
---

<Main title="Frau Hen | Blog">
  <figure class="figure">
    <img
      src={post.data.poster}
      alt={post.data.title}
      width="100%"
      height="480px"
      class="figure__image"
    />
    <figcaption class="figure__caption text-inherit">
      Poster image for {post.data.title.toLowerCase()}
    </figcaption>
  </figure>

  <h1 class="text-inherit">{post.data.title}</h1>
  <h2>{post.data.subtitle}</h2>

  <slot />
</Main>
